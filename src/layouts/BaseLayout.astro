---
// Supports weights 100-900
import '@fontsource-variable/geist';
import { ClientRouter } from 'astro:transitions'
import '../styles/global.css'
import  SpeedInsights  from "@vercel/speed-insights/astro"

import Overlay from '../components/Overlay.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
    <!-- SEO Meta Tags -->
    <title>{Astro.props.title ?? 'Leandro Ubilla - Web developer'}</title>
    <meta name="description" content={Astro.props.description ?? 'Thoughtful Web development that helps businesses and creators craft meaningful user journeys with a focus on design, functionality, and performance.'}>

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.leandroubilla.com">
    <meta property="og:title" content={Astro.props.title ?? 'Leandro Ubilla - Web developer'}>
    <meta property="og:description" content={Astro.props.description ?? 'Thoughtful Web development that helps businesses and creators craft meaningful user journeys with a focus on design, functionality, and performance.'}>
    <meta property="og:image" content="https://leandroubilla.com/og-image.jpg">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:domain" content="leandroubilla.com">
    <meta name="twitter:url" content="https://www.leandroubilla.com">
    <meta name="twitter:title" content={Astro.props.title ?? 'Leandro Ubilla - Web developer'}>
    <meta name="twitter:description" content={Astro.props.description ?? 'Thoughtful Web development that helps businesses and creators craft meaningful user journeys with a focus on design, functionality, and performance.'}>
    <meta name="twitter:image" content="https://leandroubilla.com/og-image.jpg">

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->

    <!-- Prevent flash of unstyled content (FOUC) on first paint.
     Hide body until styles are applied, then fade it in.
     Note: This is a workaround, not a perfect fix. -->

    <style is:inline>
      body {
        visibility: hidden;
        opacity: 0;
      }
    </style>

    <style is:global>
      body {
        visibility: visible;
        opacity: 1;
        transition: visibility 0.2s linear, opacity 0.2s linear;
      }
    </style>

    <ClientRouter />
    <SpeedInsights/> 
	</head>
	<body>
    <div class="relative leading-tightest">
      <div class="bg-[#FAFAFA] flex justify-center text-[#1D1D1D]">
        <div class="flex flex-col w-full min-h-screen mx-auto">
          <Header />
          <main class="flex-grow">
            <slot />
          </main>
          <Footer />
        </div>
      </div>
      <Overlay />
    </div>
    <script>
      import "../scripts/menu.js";
    </script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>