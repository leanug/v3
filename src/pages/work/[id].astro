---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

type Book = {
  title: string;
  author: string;
  img: string;
  readTime: number;
  description: string;
  buy: string;
};


export async function getStaticPaths() {
  const books = await getCollection("books");
  return books.map((book: any) => ({
    params: { id: book.slug },
    props: book
  }));
}

const { data } = Astro.props;
const { title, author, img, readTime, description, slug, buy } = data;

const { Content } = await render(Astro.props)
---

<BaseLayout title={`${title} - Dev Books`}>
  <div class="flex gap-12">
    <aside class="flex flex-col items-center gap-4">
      <a href="/">Volver atras</a>
      <!-- Book Image -->
      <img
        transition:name={`img-${slug}`}
        src={img} 
        alt={title} 
        class="w-full md:w-1/3 object-cover rounded-lg"
      />
    </aside>
    <!-- Book Info -->
    <div class="flex flex-col justify-between p-4 md:w-2/3">
      <div>
        <h2 class="text-xl font-bold">{title}</h2>
        <div class="prose prose-invert">
          <Content />
        </div>
      </div>
      
      <!-- Buy Button -->
      <a 
        href={buy} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg text-center hover:bg-blue-700"
      >
        Buy Now
      </a>
    </div>
  </div>
</BaseLayout>