---
import { Image } from 'astro:assets';

const { slug, img, title } = Astro.props;
---

<article class="relative rounded-2xl overflow-hidden">
  <Image
    transition:name={`img-${slug}`}
    src={`/${img}`}
    alt={`Cover of ${title}`} 
    class="w-full object-cover rounded-2xl bg-[#f2f2f2] "
    width="1280" 
    height="960"
    decoding="async"
    loading="lazy"
  />
</article>