---
interface Feature {
  label: string;
  extra?: string;
}

const {
  title = "Web Design",
  price = "$1300",
  priceSuffix = "+",
  startingText = "Starting at",
  features = [],
  ctaText = "Get Started"
} = Astro.props;
---

<div class="w-full rounded-2xl bg-black p-6 text-white border border-zinc-800">

  <!-- Header -->
  <div class="flex items-center gap-3 mb-6">
    <div class="flex items-center justify-center size-10 rounded-lg bg-zinc-900 border border-zinc-800">
      <!-- Solar icon slot -->
      <slot name="icon">
        <!-- fallback icon -->
        <svg class="size-5 text-zinc-200" viewBox="0 0 24 24" fill="none">
          <path
            d="M12 3l1.5 3L17 7l-3 1.5L12 12l-1.5-3L7 7l3-1.5L12 3z"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
          />
        </svg>
      </slot>
    </div>

    <h3 class="text-lg font-semibold">
      {title}
    </h3>
  </div>

  <!-- Price -->
  <div class="mb-6">
    <p class="text-sm text-zinc-400 mb-2">
      {startingText}
    </p>
    <p class="text-5xl font-semibold tracking-tight">
      {price}
      <span class="text-zinc-400 text-3xl">{priceSuffix}</span>
    </p>
  </div>

  <div class="h-px bg-zinc-800 my-6"></div>

  <!-- Features -->
  <ul class="space-y-3 text-sm">
    {features.map((feature: Feature) => (
      <li class="flex items-center gap-3 text-zinc-300">
        <!-- Placeholder circle -->
        <svg class="size-2 fill-current text-zinc-500" viewBox="0 0 8 8">
          <circle cx="4" cy="4" r="4" />
        </svg>

        <span>{feature.label}</span>

        {feature.extra && (
          <span class="ml-auto text-zinc-500">{feature.extra}</span>
        )}
      </li>
    ))}
  </ul>

  <!-- CTA -->
  <button class="mt-8 w-full rounded-xl bg-white py-3 text-sm font-semibold text-black hover:bg-zinc-200 transition">
    {ctaText}
  </button>

</div>
