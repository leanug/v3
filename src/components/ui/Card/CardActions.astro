---
import FileRight from "../../icons/FileRight.astro";

const { more, slug } = Astro.props;
---

{more && (
  <a
    href={`/work/${slug}`}
    class="absolute bottom-4 right-4 z-20"
  >
    <div class="flex items-center gap-2 px-4 py-2.5 bg-black text-white text-xs font-medium rounded-full shadow-md hover:opacity-90 transition-opacity duration-200">
      <FileRight class="w-4 h-4" />
      <span class="font-medium">Case Study</span>
    </div>
  </a>
)}
