---
interface Props {
  title: string;
  isOpen?: boolean;
}

const { title, isOpen = false } = Astro.props;
---

<div 
  class="accordion-group group mb-4 border border-neutral-100 bg-neutral-50/50 rounded-2xl overflow-hidden transition-all duration-300 hover:border-neutral-200"
  data-open={isOpen}
>
  <button
    class="flex w-full items-center justify-between p-6 text-left focus:outline-none"
    data-accordion-trigger
  >
    <div class="flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-indigo-400">
        <path d="M12 3l1.912 5.813L21 12l-7.088 3.187L12 21l-1.912-5.813L3 12l7.088-3.187L12 3z"/>
      </svg>
      <span class="text-lg font-semibold text-neutral-800 tracking-tight">{title}</span>
    </div>
    
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width="20" height="20" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      class="text-neutral-400 transition-transform duration-300 group-data-[open=true]:rotate-180"
    >
      <path d="m6 9 6 6 6-6"/>
    </svg>
  </button>

  <div 
    class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out group-data-[open=true]:max-h-[500px]"
  >
    <div class="p-6 pt-0 text-neutral-500 leading-relaxed text-sm md:text-base">
      <slot />
    </div>
  </div>
</div>