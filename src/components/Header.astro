---
import Logo from "./Logo.astro"
---

<header class="my-5 w-full mx-auto px-5">
  <nav class="flex items-center justify-between">
    <a href="/" class="flex items-center gap-2.5">
      <Logo />
    </a>
     <div class="hidden md:flex gap-y-4 text-sm font-semibold gap-8 mr-4">
        <a href="/" class="relative inline-block group">
          <span class="block transition-transform duration-300 group-hover:-translate-y-1">
            Home
          </span>
        </a>

        <a href="/about" class="relative inline-block group">
          <span class="block transition-transform duration-300 group-hover:-translate-y-1">
            About me
          </span>
        </a>

        <a href="/process" class="relative inline-block group">
          <span class="block transition-transform duration-300 group-hover:-translate-y-1">
            Process
          </span>
        </a>

        <a href="/services" class="relative inline-block group">
          <span class="block transition-transform duration-300 group-hover:-translate-y-1">
            Services
          </span>
        </a>
      </div>
    <div class="flex gap-4 items-center">
     
      <a
        href="mailto:leandroubilla@protonmail.com"
        class="bg-[#1D1D1D] px-4 h-10 md:flex items-center rounded-full text-white hover:opacity-80 font-semibold hidden text-sm"
      >
        Get started
      </a>
      <button         
        class="hover:cursor-pointer hamburger -mx-[3px]"
        aria-label="Open menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
        </svg>
      </button>
    </div>
  </nav>
</header>